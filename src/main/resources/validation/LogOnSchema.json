{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "Logon",
  "description": "A logon request of a customer",
  "type": "object",
  "properties": {
    "username": {
      "description": "The username of a customer",
      "type": "string",
      "maxLength": 20
    },
    "password": {
      "description": "The password of a customer",
      "type": "string",
      "maxLength": 120
    }
  },
  "required": [
    "username",
    "password"
  ]
}